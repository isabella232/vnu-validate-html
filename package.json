{
  "name": "@mapbox/vnu-validate-html",
  "version": "0.1.0",
  "description": "Validate static HTML with the Nu Html Checker",
  "main": "index.js",
  "bin": {
    "vnu-validate-html": "bin/cli.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint *.js test lib",
    "format": "prettier --single-quote --write '{,lib/**/,bin/**/,test/**/}*.js'",
    "test-jest": "jest",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/vnu-validate-html.git"
  },
  "keywords": [
    "validate-html",
    "html",
    "vnu",
    "validate"
  ],
  "author": "Mapbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mapbox/vnu-validate-html/issues"
  },
  "homepage": "https://github.com/mapbox/vnu-validate-html#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "globby": "^6.1.0",
    "indent-string": "^3.1.0",
    "meow": "^3.7.0",
    "strip-ansi": "^4.0.0",
    "vnu-jar": "^17.7.0"
  },
  "lint-staged": {
    "{,lib/**/,bin/**/,test/**/}*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "resetMocks": true,
    "roots": [
      "./test"
    ]
  },
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "eslint": "^4.1.1",
    "eslint-plugin-node": "^5.1.0",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4"
  }
}
